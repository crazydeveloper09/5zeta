<%- include("../partials/headera") %>
<div class="col-lg-6 col-md-12" id="form">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-12" style="margin-top: 2%">
            <div id="form1">
                <a href="/user/<%= currentUser.username %>/dashboard" id="back">
                    <i class="fas fa-arrow-left"></i>
                    Wróć do panelu administratora
                </a>
                <h1 class="login">
                    <%= atob(currentUser.name) %>, czy na pewno chcesz usunąć konto?
                </h1>
                <% if(error.length > 0){ %>
                    <div class="alert alert-danger" role="alert">
                        <%= error %>
                    </div>
                <% } %>
                <% if(success.length > 0){ %>
                    <div class="alert alert-success" role="alert">
                        <%= success %>
                    </div>
                <% } %>
                <form action="/user/<%= user._id %>?_method=DELETE" method="post" id="form">
                    <% if(atob(currentUser.role) === 'admin'){ %>
                       
                        <div class="form-floating mb-3">
                            <textarea name="reason" id="description" placeholder="Powód" class="form-control"></textarea>
                            <label for="description" class="username">
                                Podaj powód
                                
                            </label>
                            
                        </div>  
                    <% } %>
                    <input type="submit" value="Tak" class="btn button btn-golden" id="send">
                   
                </form>
                <a href="/user/<%= currentUser.username %>/dashboard" class="btn button btn-green">
                    Nie
                </a>
            </div>
           
        </div>
        
    </div>
</div>
<script>
    document.getElementById("form").addEventListener("submit", () => {
        document.getElementById("send").setAttribute("disabled", "disabled");
        document.getElementById("send").value = "Usuwanie...";
    })
</script>
</body>
</html>